[general]
ignore=B5,B6,B7,B8

[title-max-length]
line-length=72

[title-trailing-punctuation]
[title-hard-tab]
[title-match-regex]
regex=^(feat|fix|chore|refactor|docs|release|test)\((xmpp|service|ui|shared|meta)+(,(xmpp|service|ui|shared|meta))*\): .*$


[body-trailing-whitespace]
[body-first-line-empty]
